# backend/.env  (UTF-8 sin BOM)

# Puerto interno cuando ejecutas `node src/app.js`
PUERTO_INTERNO=5174

# Orígenes permitidos para CORS en dev (separados por coma)
FRONT_ORIGEN=http://localhost:5173,http://127.0.0.1:5173

# Carpeta de subidas si corres fuera de Docker
UPLOAD_DIR=uploads

# JWT
JWT_SECRETO=un_secreto_super_seguro_para_explora_huelva

# Cadena de conexión a Mongo (local)
CADENA_MONGO=mongodb://admin:admin123@localhost:27017/explora_huelva?authSource=admin

# URL pública usada en enlaces de verificación/reset en DEV
PUBLIC_URL=http://localhost:5173

# SMTP DEV (para MailHog)
SMTP_HOST=localhost
SMTP_PORT=1025
MAIL_FROM=Explora Huelva <no-reply@explorahuelva.local>
